@model Book
@{
    ViewData["Title"] = "Books";
}

<form method="post">
    <div class="form-group row">
        <div class="col-12">
            <div class="input-group mb-4">
                <label class="col-1"  asp-for="Name"></label>
                <input id="Name" name="Name" type="text" class="form-control col-6" value="@Model.Name">
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-12">
            <div class="input-group mb-4">
                <label class="col-1" asp-for="Author"></label>
                <input id="Author" name="Author" type="text" class="form-control col-6" value="@Model.Author">
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-12">
            <div class="input-group mb-4">
                <label class="col-1" asp-for="Genre"></label>
                <select class="form-select" aria-label="Default select example" asp-for="@Model.Genre" asp-items="Html.GetEnumSelectList<Genre>()">
                </select>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-12 text-center">
            <button type="submit" asp-controller="Book" asp-action="Edit" class="col-2 btn btn-primary">Edit</button>
            @if (@Model.BorrowedTime == null)
            {
                <a class="col-2 btn btn-warning" asp-controller="Book" asp-action="Borrow" asp-route-Id="@Model.Id">Borrow</a>
            }
            else
            {
                <a class="col-2 btn btn-danger" asp-controller="Book" asp-action="Return" asp-route-Id="@Model.Id">Return</a>
            }
        </div>
    </div>
</form>



